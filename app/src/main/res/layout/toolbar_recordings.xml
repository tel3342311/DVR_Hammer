<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_recordings"
    android:layout_height="@dimen/toolbar_recording_height"
    android:layout_width="match_parent"
    android:background="@drawable/records_tle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Records"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/select_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/records_select"/>
            <ImageView
                android:id="@+id/save_to_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/records_phone"/>
            <ImageView
                android:id="@+id/save_to_otg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/records_otg"/>
            <ImageView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/records_delete"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.Toolbar>
